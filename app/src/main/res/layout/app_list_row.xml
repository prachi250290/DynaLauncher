<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/app_list_padding">
    <ImageView
        android:id="@+id/app_icon"
        android:layout_width="@dimen/app_list_icon_width"
        android:layout_height="@dimen/app_list_icon_width"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/app_icon"
        android:layout_marginLeft="@dimen/margin_10"
        android:textSize="@dimen/app_name_text_size"/>

    <TextView
        android:id="@+id/app_package_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/app_name"
        app:layout_constraintLeft_toRightOf="@id/app_icon"
        android:layout_marginLeft="@dimen/margin_10"
        android:textSize="@dimen/app_package_name_text_size"/>

    <TextView
        android:id="@+id/app_activity_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/app_package_name"
        app:layout_constraintLeft_toRightOf="@id/app_icon"
        android:layout_marginLeft="@dimen/margin_10"
        android:textSize="@dimen/app_name_text_size"/>


</androidx.constraintlayout.widget.ConstraintLayout>